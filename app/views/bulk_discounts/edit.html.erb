<h1>Edit <%=@discount.name%></h1>

<div class = "edit_discount">

  <%= form_with model: [:merchant, @discount], url: merchant_bulk_discount_path(@merchant, @discount), local: true do |form| %>
    <%= form.label :name, 'Name' %>
    <%= form.text_field :name %>

    <%= form.label :percentage_discount, 'Percentage Discount'%>
    <%= form.number_field :percentage_discount %>

    <%= form.label :threshold, 'Threshold'%>
    <%= form.number_field :threshold %>

    <%= form.submit %>
  <% end %>
</div>